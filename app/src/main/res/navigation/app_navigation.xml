<?xml version="1.0" encoding="utf-8"?>
<navigation
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/app_navigation"
  app:startDestination="@id/splash_fragment">

  <fragment
    android:id="@+id/splash_fragment"
    android:name="io.github.sovathna.khmerdictionary.ui.splash.SplashFragment"
    android:label="@string/app_name_kh"
    tools:layout="@layout/fragment_splash">
    <action
      android:id="@+id/action_to_home"
      app:destination="@id/home_fragment"
      app:enterAnim="@anim/from_right"
      app:exitAnim="@anim/to_left"
      app:popEnterAnim="@anim/from_left"
      app:popExitAnim="@anim/to_right"
      app:popUpTo="@id/splash_fragment"
      app:popUpToInclusive="true" />
  </fragment>

  <fragment
    android:id="@+id/home_fragment"
    android:name="io.github.sovathna.khmerdictionary.ui.home.HomeFragment"
    android:label="@string/app_name_kh"
    tools:layout="@layout/fragment_home" />

  <fragment
    android:id="@+id/nav_bookmark"
    android:name="io.github.sovathna.khmerdictionary.ui.home.HomeFragment"
    android:label="@string/menu_bookmark"
    tools:layout="@layout/fragment_home">
    <argument
      android:name="type"
      android:defaultValue="FAVORITE"
      app:argType="io.github.sovathna.khmerdictionary.ui.home.HomeType" />
  </fragment>

  <fragment
    android:id="@+id/nav_history"
    android:name="io.github.sovathna.khmerdictionary.ui.home.HomeFragment"
    android:label="@string/menu_history"
    tools:layout="@layout/fragment_home">
    <argument
      android:name="type"
      android:defaultValue="HISTORY"
      app:argType="io.github.sovathna.khmerdictionary.ui.home.HomeType" />
  </fragment>

  <fragment
    android:id="@+id/nav_about"
    android:name="io.github.sovathna.khmerdictionary.ui.about.AboutFragment"
    android:label="@string/menu_about"
    tools:layout="@layout/fragment_about"/>
</navigation>