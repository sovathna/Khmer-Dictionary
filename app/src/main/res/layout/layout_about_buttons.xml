<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/btn_font"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:fontFamily="@font/suwannaphum"
    android:gravity="center_horizontal"
    android:text="ពុម្ពអក្សរប្រើប្រាស់៖ Suwannaphum\nDesigned by Danh Hong"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@id/btn_creator"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_creator"
    style="@style/Widget.Material3.Button.ElevatedButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginBottom="8dp"
    android:fontFamily="@font/suwannaphum"
    android:text="អភិវឌ្ឍកម្មវិធី៖ ហុង សុវឌ្ឍនា"
    android:textSize="16sp"
    app:layout_constraintBottom_toTopOf="@id/btn_github"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btn_font" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_github"
    style="@style/Widget.Material3.Button.ElevatedButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:text="Source code on GitHub"
    android:textSize="16sp"
    app:icon="@drawable/github_mark"
    app:iconGravity="end"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btn_creator" />

</androidx.constraintlayout.widget.ConstraintLayout>