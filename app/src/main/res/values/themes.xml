<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.KhmerDictionary" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/purple_500</item>
    <item name="colorPrimaryDark">@color/purple_700</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/teal_200</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.KhmerDictionary.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.KhmerDictionary.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

  <style name="Theme.KhmerDictionary.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

  <style name="AppBarTextAppearance" parent="TextAppearance.Material3.ActionBar.Title">
    <item name="android:textColor">@color/white</item>
    <item name="fontFamily">@font/suwannaphum</item>
  </style>

  <style name="DrawerMenuItemTextAppearance" parent="TextAppearance.Material3.TitleMedium">
    <item name="fontFamily">@font/suwannaphum</item>
  </style>
</resources>